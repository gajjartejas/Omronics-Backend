// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id             Int       @id @unique @default(autoincrement())
  username       String    @unique
  profilePicture String?
  email          String
  password       String
  lastname       String
  firstname      String
  isAdmin        Boolean
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}

model Category {
  id          Int       @id @unique @default(autoincrement())
  name        String
  description String?
  parentId    Int?
  product     Product[]
  images      CategoryImage[]
  featured    Boolean   @default(false)
  active      Boolean   @default(true)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @default(now()) @updatedAt
}

model CategoryImage {
  id          Int       @id @unique @default(autoincrement())
  url         String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  categories  Category[]
}

model Product {
  id             Int               @id @unique @default(autoincrement())
  name           String
  description    String?
  partNumber     String?
  modelNumber    String?
  categories     Category[]
  images         ProductImage[]
  resourcees     ProductResource[]
  manufacturer   Manufacturer?     @relation(fields: [manufacturerId], references: [id])
  featured       Boolean           @default(false)
  active         Boolean           @default(true)
  createdAt      DateTime?         @default(now())
  updatedAt      DateTime?         @default(now()) @updatedAt
  manufacturerId Int?
}

model ProductImage {
  id        Int       @id @unique @default(autoincrement())
  url       String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  products  Product[]
}

model ProductResource {
  id          Int                 @id @unique @default(autoincrement())
  title       String?
  link        String?
  description String?
  type        ProductResourceType
  createdAt   DateTime?           @default(now())
  updatedAt   DateTime?           @default(now()) @updatedAt
  products    Product[]
}

model Manufacturer {
  id          Int       @id @unique @default(autoincrement())
  name        String
  description String?
  featured    Boolean   @default(false)
  active      Boolean   @default(true)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @default(now()) @updatedAt
  products    Product[]
}

model ContactData {
  id             Int       @id @unique @default(autoincrement())
  name           String
  phoneNo        String?
  email          String?
  requirements   String
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}

model CoverImage {
  id             Int       @id @unique @default(autoincrement())
  title          String
  description    String?
  url            String?
  active         Boolean   @default(true)
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}


model StaticPageData {
  id             Int       @id @unique @default(autoincrement())
  data           String
  type           StaticPageType
  subType        StaticPageSubDataType
  dataType       StaticPageDataType
  active         Boolean   @default(true)
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}

enum StaticPageType {
  ABOUT
  CONTACT_US
  SERVICE
  BANNER
  FOOTER
}

enum StaticPageSubDataType {
  HEAD_QUARTER
  GET_IN_TOUCH_1
  GET_IN_TOUCH_2
  MAP
  BODY
  SOCIAL
}

enum StaticPageDataType {
  HTML_TEXT

  TWITTER
  FACEBOOK
  INSTAGRAM
  YOUTUBE

  NAME
  ADDRESS
  EMAIL
  PHONE

  LINK

  OTHER
}

enum ProductResourceType {
  CATALOG
  MANUAL
  SOFTWARE
  DRAWING
}
